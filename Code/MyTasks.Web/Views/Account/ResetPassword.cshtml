@using MyTasks.Localization.Desktop
@model MyTasks.Web.Models.ResetPasswordViewModel
@{
    ViewBag.Title = Desktop.ResetPassword;
    Layout = "~/Views/Account/_GeneralAccountLayout.cshtml";
}

<div style="margin-top: 20px" class="well bs-component">
   
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
    {
        @Html.AntiForgeryToken()
        <h4>@Desktop.ResetYourPassword</h4>
        <hr/>
        @Html.ValidationSummary("", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.Code)
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new {@class = "col-md-2 control-label"})
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new {@class = "col-md-2 control-label"})
            <div class="col-md-3">
                @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-md-2 control-label"})
            <div class="col-md-3">
                @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button name="button" value="send" class="btn btn-primary">@Desktop.Reset</button>
            </div>
        </div>
    }
</div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
